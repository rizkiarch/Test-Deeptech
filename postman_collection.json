{
	"info": {
		"_postman_id": "deeptech-product-transaction-api",
		"name": "DeepTech Product & Transaction API",
		"description": "Collection untuk testing Product Management dan Transaction System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5002/api",
			"type": "string"
		},
		{
			"key": "gateway_url", 
			"value": "http://localhost:8080/api/v1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Categories",
			"item": [
				{
					"name": "Get All Categories",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/categories",
							"host": ["{{base_url}}"],
							"path": ["categories"]
						}
					}
				},
				{
					"name": "Create Category",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Electronics\",\n  \"description\": \"Electronic devices and gadgets\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/categories",
							"host": ["{{base_url}}"],
							"path": ["categories"]
						}
					}
				}
			]
		},
		{
			"name": "Products",
			"item": [
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products",
							"host": ["{{base_url}}"],
							"path": ["products"]
						}
					}
				},
				{
					"name": "Get Product by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products/1",
							"host": ["{{base_url}}"],
							"path": ["products", "1"]
						}
					}
				},
				{
					"name": "Create Product (JSON)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"iPhone 15 Pro\",\n  \"description\": \"Latest iPhone with Pro features and advanced camera system\",\n  \"categoryId\": 1,\n  \"stock\": 50,\n  \"image\": \"iphone15pro.jpg\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/products",
							"host": ["{{base_url}}"],
							"path": ["products"]
						}
					}
				},
				{
					"name": "Create Product (Form Data with Image)",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "name",
									"value": "Samsung Galaxy S24",
									"type": "text"
								},
								{
									"key": "description",
									"value": "Latest Samsung flagship smartphone with AI features",
									"type": "text"
								},
								{
									"key": "categoryId",
									"value": "1",
									"type": "text"
								},
								{
									"key": "stock",
									"value": "30",
									"type": "text"
								},
								{
									"key": "image",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/products",
							"host": ["{{base_url}}"],
							"path": ["products"]
						}
					}
				},
				{
					"name": "Update Product (JSON)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"iPhone 15 Pro Max\",\n  \"description\": \"Updated description with larger screen and better battery\",\n  \"categoryId\": 1,\n  \"stock\": 45\n}"
						},
						"url": {
							"raw": "{{base_url}}/products/1",
							"host": ["{{base_url}}"],
							"path": ["products", "1"]
						}
					}
				},
				{
					"name": "Update Product (Form Data with Image)",
					"request": {
						"method": "PUT",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "name",
									"value": "Samsung Galaxy S24 Ultra",
									"type": "text"
								},
								{
									"key": "description",
									"value": "Ultra version with S Pen and enhanced features",
									"type": "text"
								},
								{
									"key": "stock",
									"value": "25",
									"type": "text"
								},
								{
									"key": "image",
									"type": "file",
									"src": []
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/products/2",
							"host": ["{{base_url}}"],
							"path": ["products", "2"]
						}
					}
				},
				{
					"name": "Delete Product",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products/1",
							"host": ["{{base_url}}"],
							"path": ["products", "1"]
						}
					}
				},
				{
					"name": "Get Products by Category",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/products/category/1",
							"host": ["{{base_url}}"],
							"path": ["products", "category", "1"]
						}
					}
				}
			]
		},
		{
			"name": "Transactions",
			"item": [
				{
					"name": "Get All Transactions (Riwayat)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["transactions"]
						}
					}
				},
				{
					"name": "Get Transaction by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions/1",
							"host": ["{{base_url}}"],
							"path": ["transactions", "1"]
						}
					}
				},
				{
					"name": "Stock In - Single Product",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"stock_in\",\n  \"productId\": 1,\n  \"quantity\": 100,\n  \"notes\": \"Initial stock from supplier\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/single",
							"host": ["{{base_url}}"],
							"path": ["transactions", "single"]
						}
					}
				},
				{
					"name": "Stock Out - Single Product",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"stock_out\",\n  \"productId\": 1,\n  \"quantity\": 5,\n  \"notes\": \"Sold to customer\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/single",
							"host": ["{{base_url}}"],
							"path": ["transactions", "single"]
						}
					}
				},
				{
					"name": "Bulk Stock In - Multiple Products",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"stock_in\",\n  \"notes\": \"Bulk restocking from supplier\",\n  \"transactions\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 50,\n      \"notes\": \"iPhone restock\"\n    },\n    {\n      \"productId\": 2,\n      \"quantity\": 30,\n      \"notes\": \"Samsung restock\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/bulk",
							"host": ["{{base_url}}"],
							"path": ["transactions", "bulk"]
						}
					}
				},
				{
					"name": "Bulk Stock Out - Multiple Products",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"stock_out\",\n  \"notes\": \"Bulk sale to corporate client\",\n  \"transactions\": [\n    {\n      \"productId\": 1,\n      \"quantity\": 10,\n      \"notes\": \"iPhone bulk sale\"\n    },\n    {\n      \"productId\": 2,\n      \"quantity\": 5,\n      \"notes\": \"Samsung bulk sale\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/transactions/bulk",
							"host": ["{{base_url}}"],
							"path": ["transactions", "bulk"]
						}
					}
				},
				{
					"name": "Get Transactions by Product",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions/product/1",
							"host": ["{{base_url}}"],
							"path": ["transactions", "product", "1"]
						}
					}
				},
				{
					"name": "Get Stock In Transactions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions/type/stock_in",
							"host": ["{{base_url}}"],
							"path": ["transactions", "type", "stock_in"]
						}
					}
				},
				{
					"name": "Get Stock Out Transactions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions/type/stock_out",
							"host": ["{{base_url}}"],
							"path": ["transactions", "type", "stock_out"]
						}
					}
				},
				{
					"name": "Get Transactions by Date Range",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/transactions/date-range?startDate=2025-01-01&endDate=2025-12-31",
							"host": ["{{base_url}}"],
							"path": ["transactions", "date-range"],
							"query": [
								{
									"key": "startDate",
									"value": "2025-01-01"
								},
								{
									"key": "endDate",
									"value": "2025-12-31"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Gateway Endpoints",
			"item": [
				{
					"name": "Gateway - Get All Products",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer YOUR_JWT_TOKEN_HERE"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/products",
							"host": ["{{gateway_url}}"],
							"path": ["products"]
						}
					}
				},
				{
					"name": "Gateway - Create Product",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer YOUR_JWT_TOKEN_HERE"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"MacBook Pro M3\",\n  \"description\": \"Latest MacBook Pro with M3 chip\",\n  \"categoryId\": 1,\n  \"stock\": 20\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/products",
							"host": ["{{gateway_url}}"],
							"path": ["products"]
						}
					}
				},
				{
					"name": "Gateway - Stock In Transaction",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer YOUR_JWT_TOKEN_HERE"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"type\": \"stock_in\",\n  \"productId\": 1,\n  \"quantity\": 50,\n  \"notes\": \"Monthly restock via API Gateway\"\n}"
						},
						"url": {
							"raw": "{{gateway_url}}/transactions/single",
							"host": ["{{gateway_url}}"],
							"path": ["transactions", "single"]
						}
					}
				},
				{
					"name": "Gateway - Get Transaction History",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer YOUR_JWT_TOKEN_HERE"
							}
						],
						"url": {
							"raw": "{{gateway_url}}/transactions",
							"host": ["{{gateway_url}}"],
							"path": ["transactions"]
						}
					}
				}
			]
		}
	]
}